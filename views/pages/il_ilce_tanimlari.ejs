<!DOCTYPE html>
<html>
    <head>
        <%include ../partial-pages/css.ejs%>
    </head>
    <body class="skin-blue">
       <%include ../partial-pages/master_head.ejs%>
        <div class="wrapper row-offcanvas row-offcanvas-left">
           <%include ../partial-pages/master_left.ejs%>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1 style="font-size:22px;">
                        İl İlçe Tanımları Ekranı
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i> Anasayfa</a></li>
                        <li class="active">İl İlçe Tanımları</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <!-- form start -->
                                        <div class="box-body">
                                            <br>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                 <form id="frmCity" role="form" method="post" action="/wscity/addNew">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" name="city" required>
                                                                <div class="input-group-btn">
                                                                    <button type="submit" class="btn btn-info" style="border-radius:0;" style="border-radius:0;">İl Ekle</button>
                                                                </div><!-- /btn-group -->

                                                            </div><!-- /input-group -->
                                                        </div>

                                                    </div>
                                                    </form>
                                                    <form role="form">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <input id="inpTown" type="text" class="form-control" required>
                                                                <div class="input-group-btn">
                                                                    <button id="btnAddTown" type="button" class="btn btn-info" style="border-radius:0;">İlçe Ekle</button>
                                                                </div><!-- /btn-group -->

                                                            </div><!-- /input-group -->
                                                        </div>
                                                     </div>
                                                  </form>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <select id="slctCity" name="city" class="icon-menu btn-block btn-default" style="height:35px;">
                                                                <option style="padding-left:0px;" value="">İl Seçiniz</option>
                                                                <%for(var i=0;i<citys.length;i++){%>
                                                                        <option id="<%=citys[i]._id%>" value="<%=citys[i].city%>"><%=citys[i].city%></option>
                                                                <%}%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div><!-- /.box-body -->
                                   </div><!-- /.box -->
                              </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">İl Listesi</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <table class="table table-bordered citys">
                                            <tr style="border-bottom:3px solid #3c8dbc;">
                                                <th class="text-center" style="width: 40px">#</th>
                                                <th>İl</th>
                                                <th style="width: 40px">Operasyon</th>
                                            </tr>
                                            <tbody>
                                                <%for(var i=0;i<citys.length;i++){%>
                                                <tr id="<%=citys[i]._id%>">
                                                    <td class='text-center'><%=i+1%>.</td>
                                                    <td><%=citys[i].city%></td>
                                                    <td id="<%=citys[i]._id%>" class='text-center' ><button class="btn btn-danger sil"><i class="fa fa-trash-o"></i></button></td>
                                                </tr>
                                                <%}%>
                                            </tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div>
                            <div class="col-md-6">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">İlçe Listesi</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <table class="table table-bordered towns">
                                            <thead>
                                            <tr style="border-bottom:3px solid #3c8dbc;">
                                                <th class="text-center" style="width: 40px">#</th>
                                                <th>İlçe</th>
                                                <th style="width: 40px">Operasyon</th>
                                            </tr>
                                           </thead>
                                           <tbody></tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->
       <%include ../partial-pages/script.ejs%>
       <script src="../js/helper-js/Helper.js" type="text/javascript"></script>
       <script src="../js/pages-js/cityPage.js" type="text/javascript"></script>
    </body>
</html>
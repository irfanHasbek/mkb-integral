<!DOCTYPE html>
<html>
    <head>
        <%include ../partial-pages/css.ejs%>
        <link href="../css/utility-css/bootstrap-wysihtml5/bootstrap3-wysihtml5.css" rel="stylesheet" type="text/css" />
    </head>
    <body class="skin-blue">
       <%include ../partial-pages/master_head.ejs%>
        <div class="wrapper row-offcanvas row-offcanvas-left">
           <%include ../partial-pages/master_left.ejs%>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1 style="font-size:22px;">
                        Kapak Sayfa Tanımları Ekranı
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i> Anasayfa</a></li>
                        <li class="active">Kapak Sayfa Tanımları</li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box box-info">
                                    <!-- form start -->
                                    <form id="frmCoverPage" role="form" method="post" action="/wscoverpage/addnew">
                                       <input name="_id" type="text" style="display:none;" id="inpCoverPageId" disabled>
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <label>Etiket</label>
                                                        <input id="inpLabel" type="text" class="form-control " name="label"  placeholder="Etiket Giriniz" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <input id="cbActive" type="checkbox" class="form-control " name="active">
                                                        <span>&nbsp;</span><label>B2B Gorme Yetkisi ver</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-md-offset-1">
                                                    <div class="form-group ">
                                                        <label>Icerik</label>
                                                        <textarea id="inpCoverContent" name="content" class="textarea" placeholder="Aciklama giriniz" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div><!-- /.box-body -->

                                        <div class="box-footer">
                                            <div style="text-align:center">
                                                <button id="btnSave" type="submit" class="btn btn-primary btn-flat">Kaydet</button>
                                            </div>
                                        </div>
                                    </form>
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">Kapak Sayafalari Listeleme</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <table class="table table-bordered coverPages">
                                            <tr style="border-bottom:3px solid #3c8dbc;">
                                                <th class="text-center" style="width: 40px">#</th>
                                                <th>Etiket</th>
                                                <th class="text-center" style="width: 120px"></th>
                                            </tr>
                                            <tbody>
                                                 <%for(var i = 0; i < covers.length; i++){%>
                                                     <tr id="<%=covers[i]._id%>">
                                                         <td><%=(i+1)%></td>
                                                         <td><%=covers[i].label%></td>
                                                         <td id="<%=covers[i]._id%>"><button class="btn btn-danger sil"><i class="fa fa-trash-o"></i></button>&nbsp;<button class="btn btn-info update"><i class="fa fa-search"></i></button></td>
                                                         <td data="<%=JSON.stringify(covers[i])%>" style="display:none;"></td>
                                                     </tr>
                                                 <%}%>
                                            </tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->
       <%include ../partial-pages/script.ejs%>
       <script src="../js/utility-js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
        <script src="../js/helper-js/Helper.js"></script>
        <script src="../js/pages-js/coverPage.js"></script>
        <script type="text/javascript">
            $(function() {
                $(".textarea").wysihtml5();
            });
       </script>
    </body>
</html>
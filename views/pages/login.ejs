<!DOCTYPE html>
<html class="bg-black">
    <head>
        <%include ../partial-pages/css.ejs%>
    </head>
    <body class="bg-black">

        <div class="form-box" id="login-box">
            <div class="header">Giriş</div>
            <form action="/login" method="post">
                <div class="body bg-gray">
                    <div class="form-group">
                        <input type="text" name="firmCode" class="form-control" placeholder="Şirket Kodu"/>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="E-mail"/>
                    </div>  
                    <div class="form-group">
                        <div class="input-group">
                            <input type="password" name="password" class="form-control pwd" placeholder="Şifre" >
                            <span class="input-group-btn">
                                <button class="btn btn-default reveal" type="button"><i class="glyphicon glyphicon-eye-open"></i></button>
                            </span>          
                        </div> 
                    </div>       
                    <div class="form-group">
                        <input type="checkbox" name="remember_me"/> Beni Hatırla
                    </div>
                </div>
                <div class="footer">                                                               
                    <button type="submit" class="btn btn-info btn-block">Giriş Yap</button>  
                    
                    <p><a href="#">Şifremi unuttum</a></p>
                    
                </div>
            </form>
        </div>


        <!-- jQuery 2.0.2 -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="../js/utility-js/bootstrap.min.js" type="text/javascript"></script> 
        <script>
            $(".reveal").mousedown(function() {
                $(".pwd").replaceWith($('.pwd').clone().attr('type', 'text'));
            })
            .mouseup(function() {
                $(".pwd").replaceWith($('.pwd').clone().attr('type', 'password'));
            })
            .mouseout(function() {
                $(".pwd").replaceWith($('.pwd').clone().attr('type', 'password'));
            });
        </script>       

    </body>
</html>
<!DOCTYPE>
<html>
<head>
    <%include ../partial-pages/css.ejs%>
</head>
<body class="skin-blue">
   <%include ../partial-pages/master_head.ejs%>
    <div class="wrapper row-offcanvas row-offcanvas-left">
       <%include ../partial-pages/master_left.ejs%>
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Firma Tanımları
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i> Anasayfa</a></li>
                    <li class="active">Firma Tanımları</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="box box-info">
                                <!-- form start -->
                                <div class="box-body">
                                    <br>
                                    <form id="formFirm" method="post" action="/wsfirm/update1">
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-10">
                                                    <div class="">
                                                        <div class="form-group">
                                                            <select id="slFirms" name="name" class="icon-menu btn-block btn-default" style="height:35px;">
                                                                <option style="padding-left:0px;" >Firma Seçiniz</option>
                                                                <%for(var i = 0;i < firms.length;i++){%>
                                                                    <option><%=firms[i].name%></option>
                                                                <%}%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <button id="btnGetFirmInfo" class="btn btn-info btn-flat btn-block" type="button">Bilgileri Getir</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-md-offset-1">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label >Email</label>
                                                        <input id="inpFirmEmail" name="email" type="text" class="form-control"  placeholder="Email Giriniz">
                                                        <input id="inpFirmaLogo" name="logoUrl" style='display:none;' value="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-md-10 col-md-offset-1">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <br>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <form id="formSubmitAddPicture" method="post" action="/wspicture/upload" enctype="multipart/form-data">
                                                                <div class="btn-group">
                                                                        <input class="btn btn-flat" id="inpPictureUpload" type="file" name="image" accept="image/*"/>
                                                                        <button type="submit" id="btnSubmitPicture" class="btn btn-info btn-flat" type="button">Yükle</button>
                                                                </div><!-- /input-group -->
                                                            </form>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="well">
                                                                <div class="row">
                                                                    <div id="divPicture" class="col-md-12 " style="position:relative;">
                                                                        <div class=""><img id="imgFirmLogo" src="/uploads/empty.png" class="img-responsive img-thumbnail" alt="" style="height:200px;"><a id="aRemovePic" style="border-radius:0px;position:absolute;bottom:5%;right:10%;" class="btn btn-danger" href="Javascript:void(0)"><span class="glyphicon glyphicon-trash"></span></a></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- /.box-body -->
                                <div class="box-footer">
                                    <div style="text-align:center">
                                        <button id="btnFirmPart1Save" class="btn btn-primary btn-flat">Kaydet</button>
                                    </div>
                                </div>
                            </div><!-- /.box -->
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="box">
                                <div class="">
                                    <!-- Custom Tabs -->
                                    <div class="nav-tabs-custom">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a href="#tab_1" data-toggle="tab">Yetkili Bilgileri</a></li>
                                            <li><a href="#tab_2" data-toggle="tab">İletişim Bilgileri</a></li>
                                        </ul>
                                        <form id="formFirm2" action="/wsfirm/update2" method="post">
                                           <input id="inpUpdate2Name" name="name" style="display:none;">
                                           <input name="logoUrl" style="display:none;">
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tab_1">
                                                    <div class="row">
                                                        <div class="col-md-10 col-md-offset-1">
                                                            <div class="box-body">
                                                                <div class="form-group">
                                                                    <label >Yetkili Adı</label>
                                                                    <input id="inpCompetentName" name="competentInformationName" type="text" class="form-control"  placeholder="Yetkili Adı Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >Görev</label>
                                                                    <input id="inpCompetentTask" type="text" name="competentInformationTask" class="form-control"  placeholder="Görevi Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>GSM</label>
                                                                    <input id="inpCompetentGsm" type="text" name="competentInformationGsm" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask  placeholder="Telefon Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >E-mail</label>
                                                                    <input id="inpCompetentEmail" type="email" name="competentInformationEmail" class="form-control"  placeholder="E-mail Giriniz">
                                                                </div>
                                                            </div><!-- /.box-body -->
                                                        </div>
                                                    </div>
                                                </div><!-- /.tab-pane -->
                                                <div class="tab-pane" id="tab_2">
                                                    <div class="row">
                                                        <div class="col-md-10 col-md-offset-1">
                                                            <div class="box-body">
                                                                <div class="form-group">
                                                                    <label >Adres</label>
                                                                    <textarea id="inpContactAddress" name="contactInformationAddress" type="text" class="form-control"  placeholder="Adres Giriniz" rows="2" style="resize:vertical;"></textarea>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >İl</label>
                                                                    <input id="inpContactCity" name="contactInformationCity" type="text" class="form-control"  placeholder="İl Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >İlçe</label>
                                                                    <input id="inpContactState" name="contactInformationState" type="text" class="form-control"  placeholder="İlçe Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >İş Tel</label>
                                                                    <input id="inpContactBusinessTel" name="contactInformationBusinessTel" type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask  placeholder="İş Tel Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >Fax</label>
                                                                    <input id="inpContactFax" type="text" name="contactInformationFax" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask  placeholder="Fax Giriniz">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label >Web Adresi</label>
                                                                    <input id="inpContactWeb" type="url" name="contactInformationWeb" class="form-control"  placeholder="http://www.">
                                                                </div>
                                                            </div><!-- /.box-body -->
                                                        </div>
                                                    </div>
                                                </div><!-- /.tab-pane -->
                                                <div class="box-footer">
                                                    <div style="text-align:center;">
                                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <!-- /.tab-content -->
                                    </div><!-- nav-tabs-custom -->
                                </div><!-- /.col -->
                            </div><!-- /.box -->
                        </div>
                    </div>
                </div>
            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <%include ../partial-pages/script.ejs%>
    <!-- page.js -->
    <script src="../js/pages-js/firma_tanimlari.js" type="text/javascript"></script>
    <script src="../js/helper-js/Helper.js" type="text/javascript"></script>
</body>
</html>